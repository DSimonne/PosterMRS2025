doi={10.1038/s41467-020-19728-3},
}

@article{Yang2019a,
author = "Yang, David and Phillips, Nicholas W. and Hofmann, Felix",
title = "{Mapping data between sample and detector conjugated spaces in Bragg coherent diffraction imaging}",
