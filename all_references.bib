@Article{Yao2016,
author ="Yao, Yunxi and Giapis, Konstantinos P.",
title  ="Dynamic nitroxyl formation in the ammonia oxidation on platinum via Eley–Rideal reactions",
journal  ="Phys. Chem. Chem. Phys.",
