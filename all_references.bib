title = {Jupyter as Common Technology Platform for Interactive HPC Services},
year = {2018},
isbn = {9781450364461},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
doi = {10.1145/3219104.3219162},
abstract = {The Minnesota Supercomputing Institute has implemented Jupyterhub and the Jupyter
notebook server as a general-purpose point-of-entry to interactive high performance
computing services. This mode of operation runs counter to traditional job-oriented
HPC operations, but offers significant advantages for ease-of-use, data exploration,
